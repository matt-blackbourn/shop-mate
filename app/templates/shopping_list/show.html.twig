{% extends 'base.html.twig' %}

{% block title %}ShoppingList{% endblock %}

{% block body %}
    <h1>{{ shopping_list.dateCreated|date('D d/m/Y') }}</h1>

    <table class="table">
        <tbody>
            <h5>Items</h5>
            <ul>
            {% for item in shopping_list.items %}
                <li>{{ item.name }} ({{ item.id }})</li>
            {% endfor %}
            </ul>
            <tr>
                <th>DateCompleted</th>
                <td>{{ shopping_list.dateCompleted ? shopping_list.dateCompleted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_shopping_list_edit', {'id': shopping_list.id}) }}">edit</a>

    <div class="mt-3">
            <a href="{{ path('app_home') }}" class="btn btn-secondary btn-lg w-100">
                Home
            </a>
        </div>
{% endblock %}
