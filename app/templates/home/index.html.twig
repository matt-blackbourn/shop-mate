        <div class="brand">
            {# <img
                src="{{ asset('images/shopmate.jpeg') }}"
                alt="ShopMate"
                class="brand-logo"
            > #}
            <span class="brand-name">
                <span class="brand-shop">Shop</span><span class="brand-mate">Mate</span>
            </span>
        </div>
        <div class="header-spacer"></div>
        <button class="menu-button" aria-label="Open menu">
            ‚ò∞
        </button>
    </header>

    <!-- Main -->
    <main class="home-main">
        <div class="home-hero">
            <img
                src="{{ asset('images/shopmate.jpeg') }}"
                alt="ShopMate"
                class="hero-logo"
            >

        </div>


        <div class="home-actions">
            <a href="{{ path('app_shopping_list_index') }}" class="btn btn-primary">
                üõí Go Shopping
            </a>

            <a href="{{ path('app_shopping_list_new') }}" class="btn btn-secondary">
