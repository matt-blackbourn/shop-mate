{% extends 'base.html.twig' %}

{% block title %}ShoppingList index{% endblock %}

{% block body %}
<h1 class="mb-4 text-center">
    ðŸ›’ Your Shopping Lists
</h1>
<p class="text-center text-muted mb-4">
    Tap a list to see options or start shopping!
</p>

{# Add List Button #}
<div class="d-flex justify-content-center mb-4">
    <a href="{{ path('app_shopping_list_new') }}" class="btn btn-primary flex-fill">
        <i class="bi bi-plus"></i> Add New List
    </a>
    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary flex-fill">Home</a>
</div>

   {# templates/shopping_list/index.html.twig #}
<div class="container my-3">
    <div class="row g-3">
        {% for list in shoppingLists %}
            {# Use dateCompleted if exists, else dateCreated #}
            {% set now = "now"|date("Y-m-d") %}
            {% set listDay = list.dateModified|date("Y-m-d") %}

            {% set interval = list.dateModified|date("U") - "now"|date("U") %}
            {% set diffDays = (interval / 86400)|abs|round(0, 'floor') %}

            {% if diffDays == 0 %}
                {% if listDay != now %}
                    {% set timeAgo = 'yesterday' %}
                {% else %}
                    {% set timeAgo = 'today' %}
                {% endif %}
            {% elseif diffDays < 7 %}
                {% set timeAgo = diffDays ~ ' day' ~ (diffDays != 1 ? 's' : '') ~ ' ago' %}
            {% else %}
                {% set diffWeeks = (diffDays / 7)|round(0, 'floor') %}
                {% set timeAgo = diffWeeks ~ ' week' ~ (diffWeeks != 1 ? 's' : '') ~ ' ago' %}
            {% endif %}

            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body p-3" style="cursor: pointer;" onclick="toggleButtons('buttons-{{ loop.index }}')">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ list.dateModified|date('l') }} - {{ list.listItems|length }} items</strong>
                                <small class="text-muted">({{ timeAgo }})</small>
                            </div>
                            <i class="bi bi-chevron-down" id="icon-{{ loop.index }}"></i>
                        </div>
                        <div class="mt-2 collapse-buttons" id="buttons-{{ loop.index }}" style="display: none;">
                            <div class="d-flex gap-2 mt-2">
                                <a href="{{ path('app_shopping_list_edit', {id: list.id}) }}" class="btn btn-outline-primary w-50" onclick="event.stopPropagation()">Edit</a>
                                <a href="{{ path('app_shopping_list_active', {id: list.id}) }}" class="btn btn-outline-success w-50" onclick="event.stopPropagation()">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">No shopping lists available.</p>
            </div>
        {% endfor %}
    </div>
</div>

<script>
function toggleButtons(id) {
    const el = document.getElementById(id);
    const icon = document.getElementById('icon-' + id.split('-')[1]);
    if (el.style.display === 'none' || el.style.display === '') {
        el.style.display = 'block';
        icon.classList.remove('bi-chevron-down');
        icon.classList.add('bi-chevron-up');
    } else {
        el.style.display = 'none';
        icon.classList.remove('bi-chevron-up');
        icon.classList.add('bi-chevron-down');
    }
}
</script>

{% endblock %}
